---
import { getPages } from '@/utils/contents';
import MenuLink from './MenuLink.astro';
import { toPath } from '@/utils/path';
import { Image } from 'astro:assets';
import { FOOTER_IMAGE } from '@/utils/images';

const pages = await getPages();
---

<footer>
  <div class="menu">
    {pages.map((page) => <MenuLink href={toPath(page, true)} text={page.data.title} class="link" />)}
  </div>

  <div class="line"></div>

  <div class="syscat-container">
    <Image src={FOOTER_IMAGE} alt="シスにゃん" />
  </div>

  <p class="copyright">SET © 2025 Copyright.</p>
</footer>

<style lang="scss">
  footer {
    height: fit-content;
    width: 100vw;
    background-color: $primary-200;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 29px;

    .menu {
      padding: 30px 30px 30px 100px;

      .link {
        line-height: 1.5rem;
      }
    }

    .line {
      height: 100%;
      max-height: 300px;
      background-color: $primary-400;
      margin-block: auto;
      display: none;
    }

    .syscat-container {
      display: flex;
      justify-content: center;
      align-items: center;
      display: none;

      img {
        width: 200px;
        height: 200px;
      }
    }

    .copyright {
      margin-inline: 20px;
      color: $primary-500;
      text-align: center;
      grid-column: 1 / -1;
      line-height: 28px;
      border-top: 1px solid $primary-500;
    }

    @media (min-width: 600px) {
      grid-template-columns: 1fr 1px 1fr;

      .line {
        display: block;
      }

      .syscat-container {
        display: flex;
      }
    }
  }
</style>
