---
import Layout from '@/layouts/Layout.astro';
import notfoundImage from '@/assets/404/404.webp';
import { Image } from 'astro:assets';
---

<Layout title="制作物">
  <div class="container">
    <div>
      <h1>404 Not Found!!</h1>
      <p>部室は 14号館1階 へ引越しました</p>
      <a href="/" class="link">トップへ</a>
    </div>
    <Image src={notfoundImage} alt="旧部室" />
  </div>
</Layout>

<style lang="scss">
  .container {
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    position: relative;

    .link {
      color: $primary-200;
    }

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      position: absolute;
      z-index: -1;
      filter: opacity(0.2) blur(5px);
    }
  }
</style>
