---
import { PRELOAD_IMAGE_MAP } from '@/utils/images';
import Header from '@/components/Header/index.astro';
import Footer from '@/components/Footer/index.astro';
import '@/styles/globals.scss';

interface Props {
  title?: string;
  scrollable?: boolean;
}

const { title, scrollable } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    {Object.values(PRELOAD_IMAGE_MAP).map((value) => <link rel="preload" href={value} as="image" />)}
    <title>{title == undefined ? 'シス研' : `${title} | シス研`}</title>
  </head>

  <body data-scrollable={scrollable}>
    <Header />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style lang="scss">
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  main {
    padding-top: $header-height;
    min-height: 100vh;
  }
</style>
